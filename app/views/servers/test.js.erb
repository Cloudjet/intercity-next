<% if @connected %>
  $("#server_<%= @server.id %>").find("[data-server-status~=error]").addClass("hidden")
  $("#server_<%= @server.id %>").find("[data-server-status~=connected]").removeClass("hidden")
<% else %>
  $("#server_<%= @server.id %>").find("[data-server-status~=error]").removeClass("hidden")
  $("#server_<%= @server.id %>").find("[data-server-status~=connected]").addClass("hidden")
<% end %>
$("#server_<%= @server.id %>").find("[data-server-status~=testing]").addClass("hidden")
$("#server_<%= @server.id %>").find("[data-behaviour~=test-server]").removeClass("hidden")
