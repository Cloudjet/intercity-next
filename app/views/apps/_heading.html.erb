<div class="heading">
  <h1><%= app.name %> running on <%= app.server.name %></h1>
  <ul class="nav nav-tabs">
    <li>
      <%= link_to "#{icon("chevron-left")} Back to server".html_safe,
        server_apps_path(app.server) %></li>
    <li class="<%= "active" if tab == "info" %>">
      <%= link_to "Info", server_app_path(app.server, app) %></li>
    <li class="<%= "active" if tab == "domains" %>">
      <%= link_to "Domains", server_app_domains_path(app.server, app) %></li>
    <li class="<%= "active" if tab == "services" %>">
      <%= link_to "Linked services", server_app_services_path(app.server, app) %></li>
    <li class="<%= "active" if tab == "env_vars" %>">
      <%= link_to "Environment variables", server_app_env_vars_path(app.server, app) %></li>
    <li class="<%= "active" if tab == "backups" %>">
      <%= link_to "Backups", server_app_backups_path(app.server, app) %></li>
  </ul>
</div>
<%= render "flashes" -%>
