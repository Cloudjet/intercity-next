<%= content_tag :div, id: dom_id(service), class: "service" do %>
  <div class="panel panel-<%= server.has_service?(service) ? "success" : "default" %>">
    <div class="panel-heading">
      <h3 class="panel-title"><%= service.name %></h3>
    </div>
    <div class="panel-body">
        <%= image_tag "services/#{service.name.downcase}.png", width: 100, height: 100 %>
        <% if server.services.include?(service) %>
          <p><span class="label label-success">Installed</span></p>
        <% else %>
          <p><%= link_to "Install #{service.name}", server_service_path(server, service), method: :post, class: "btn btn-primary" %></p>
        <% end %>
    </div>
  </div>
<% end %>
